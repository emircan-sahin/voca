{
  "name": "@voca/app",
  "version": "0.0.7",
  "description": "Voice transcription desktop app",
  "author": "Voca <contact@usevoca.dev>",
  "main": "out/main/index.js",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "build:mac": "rm -rf out release && electron-vite build && electron-builder --mac",
    "build:win": "rm -rf out release && electron-vite build && electron-builder --win",
    "preview": "electron-vite preview",
    "lint": "eslint .",
    "postinstall": "node scripts/patch-electron-plist.mjs"
  },
  "build": {
    "appId": "dev.usevoca.app",
    "productName": "Voca",
    "npmRebuild": false,
    "directories": {
      "output": "release"
    },
    "files": [
      "out/**/*"
    ],
    "extraResources": [
      {
        "from": "../../assets",
        "to": "assets"
      }
    ],
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "../../assets/icon.icns",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "notarize": true,
      "protocols": [
        {
          "name": "Voca",
          "schemes": [
            "voca"
          ]
        }
      ]
    },
    "win": {
      "target": "nsis",
      "icon": "../../assets/icon.png"
    },
    "dmg": {
      "artifactName": "Voca.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "perMachine": false,
      "artifactName": "Voca-Setup.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "emircan-sahin",
      "repo": "voca"
    }
  },
  "dependencies": {
    "@paddle/paddle-js": "^1.6.2",
    "@tanstack/react-query": "^5.49.2",
    "@voca/shared": "workspace:*",
    "axios": "^1.7.2",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.11",
    "electron-store": "^11.0.2",
    "electron-updater": "^6.3.9",
    "i18next": "^25.8.13",
    "lucide-react": "^0.400.0",
    "poyraz-ui": "^0.2.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.71.2",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^16.5.4",
    "tailwind-merge": "^2.3.0",
    "uiohook-napi": "^1.5.4",
    "zustand": "^4.5.4"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.2.0",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "electron": "^31.1.0",
    "electron-builder": "^25.1.8",
    "electron-vite": "^5.0.0",
    "postcss": "^8.4.39",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.4.5"
  }
}
